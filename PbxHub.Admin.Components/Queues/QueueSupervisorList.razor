@using PbxHub.Common

<MudText Typo="Typo.h5" Color="Color.Info" Align="Align.Center">Supervisors</MudText>
<MudDivider DividerType="DividerType.Middle" Class="mt-3 mb-3 separate-line" />
@if (QueueSupervisors != null)
{
    <MudTable Items="@QueueSupervisors" Dense="false" Hover="true" Bordered="false" Striped="false" FixedHeader="true" Style="width:100%;">
        <HeaderContent>
            <MudTh><MudTableSortLabel InitialDirection="SortDirection.Ascending" SortBy="new Func<QueueSupervisor, object>(x => x.fullName)">Name</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<QueueSupervisor, object>(x => x.extension)">Extension</MudTableSortLabel></MudTh>
            <MudTh />
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">@context.fullName</MudTd>
            <MudTd DataLabel="Extension">@context.extension</MudTd>
            <MudTd>
                <MudLink @onclick="@(() => DeleteQueueSupervisor(context.queueSupervisorId))" Underline="Underline.None" Color="Color.Error">
                    <MudIcon Icon="@Icons.Material.Outlined.Delete" />
                </MudLink>
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
            <MudGrid Justify="Justify.Center">
                <MudItem>
                    <MudButton Variant="Variant.Outlined" Color="Color.Info" StartIcon="@Icons.Material.Outlined.Add" OnClick=@(() => ShowQueueSupervisorAddDlgAsync())>
                        Add Supervisor
                    </MudButton>
                </MudItem>
            </MudGrid>
        </PagerContent>
    </MudTable>
}