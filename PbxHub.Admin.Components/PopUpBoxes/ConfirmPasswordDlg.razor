<MudDialog>
    <TitleContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText Typo="Typo.h5" Align="Align.Center">Confirm Password</MudText>
            </MudItem>
        </MudGrid>
        <MudDivider DividerType="DividerType.Middle" Class="mt-3 separate-line" />        
    </TitleContent>
    <DialogContent>
        <MudGrid Justify="Justify.Center">
            <MudItem xs="8">
                <MudText Align="Align.Justify">
                    This action cannot be undone. This will permanently delete the selected client and all information related to this from the server.
                    <br />
                    Please type your password to confirm your permission.
                </MudText>
            </MudItem>
        </MudGrid>
        <MudGrid Justify="Justify.Center">
            <MudItem xs="8">
                <MudTextField @bind-Value="@PasswordValue" Label="Password" Margin="Margin.Dense" Variant="Variant.Outlined" InputType="@PasswordInput"
                              Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" AdornmentColor="Color.Info" OnAdornmentClick="OnShowPassword" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" Color="Color.Warning" StartIcon="@Icons.Material.Outlined.Save" OnClick=@(() => OnClickHandler("Submit"))>
            Submit
        </MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Info" StartIcon="@Icons.Material.Outlined.Cancel" OnClick=@(() => OnClickHandler("Cancel"))>
            Cancel
        </MudButton>
    </DialogActions>
</MudDialog>